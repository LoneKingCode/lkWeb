@using lkWeb.Service.Dto
@model TableColumnDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "编辑列";
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            lkWeb.FormValidation($("#lkForm"), function () {
                lkWeb.GoAction("admin", "tablecolumn", "index")
            }, "操作成功")
        })

    </script>
}
<form class="form-horizontal" action="@Url.Action("Edit");" method="post" id="lkForm">
    @Html.HiddenFor(item => item.Id, new { @class = "form-control" })
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-2 control-label">所属表</label>
        <div class="col-md-4">
            @Html.DropDownList("TableId", (SelectList)ViewBag.TableList, new { @class = "form-control" })
        </div>
        <label class="col-md-2 control-label">列名称</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Name"
                   data-val="true" data-val-maxlength="列名称长度不能超过12个字符" data-val-maxlength-max="50"
                   data-val-minlength="列名称长度不能少于2个字符" data-val-minlength-min="2" data-val-required="列名称不能为空" />
            <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">列说明</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Description"
                   data-val="true" data-val-maxlength="列说明长度不能超过50个字符" data-val-maxlength-max="50"
                   data-val-required="列说明不能为空" />
            <span class="field-validation-valid" data-valmsg-for="Description" data-valmsg-replace="true"></span>
        </div>
        <label class="col-md-2 control-label">数据类型</label>
        <div class="col-md-4">
            @Html.DropDownListFor(item => item.DataType, (SelectList)ViewBag.DataTypeList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">是否必填</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Required" />
        </div>
        <label class="col-md-2 control-label">输入控制</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="MaxLength" data-toggle="tooltip" title="最大长度"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">详情显示顺序</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ViewOrder" />
        </div>
        <label class="col-md-2 control-label">列表显示顺序</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ListOrder" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">添加编辑显示顺序</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="EditOrder" />
        </div>

    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">导入是否可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ImportVisible" />
        </div>
        <label class="col-md-2 control-label">导出是否可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ExportVisible" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">详情是否可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ViewVisible" />
        </div>
        <label class="col-md-2 control-label">添加是否可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="AddVisible" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">查询是否可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="SearchVisible" />
        </div>
        <label class="col-md-2 control-label">编辑是否可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="EditVisible" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">列表是否可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ListVisible" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">外部SQL</label>
        <div class="col-md-7">
            <textarea class="form-control" asp-for="OutSql" rows="3" data-toggle="tooltip" title="例如Id,Name|Sys_Department|ParentId=0 (主键,列名|表名|条件)">></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">枚举值范围</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="EnumRange" data-toggle="tooltip" title="例如 模块,菜单,按钮" />
        </div>
        <label class="col-md-2 control-label">是否主键</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="PrimarKey" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="submit" class="btn btn-success">确定</button>
            <button type="button" class="btn btn-default" onclick="history.go(-1)">返回</button>
        </div>
    </div>
</form>