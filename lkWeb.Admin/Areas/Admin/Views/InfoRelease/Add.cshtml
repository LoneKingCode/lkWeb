@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "发布信息";
}
@section Scripts{



    <script type="text/javascript">
        var ue = UE.getEditor('InfoContent');

        $(function () {
            var rules = {
                Title: {
                    required: true,
                },
                InfoContent: {
                    required: true,
                },
            }
            lkWeb.FormValidation("#lkForm", rules, {}, function () {
                lkWeb.RefreshAndClose()
            }, "操作成功")
        })
    </script>
}
<form class="form-horizontal" action="@Url.Action("Add", new { id = 0 })" method="post" id="lkForm">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-3 control-label">类型</label>
        <div class="col-md-7">
            @Html.DropDownList("TypeId", (SelectList)ViewBag.types, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">标题</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="Title" />

        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">内容</label>
        <div class="col-md-7">
            <script id="InfoContent" name="InfoContent" type="text/plain" style="height:400px;">
            </script>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="submit" class="btn btn-success">确定</button>
            <button type="button" class="btn btn-default" onclick="lkWeb.Close()">返回</button>
        </div>
    </div>
</form>