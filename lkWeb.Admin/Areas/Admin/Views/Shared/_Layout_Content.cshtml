<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--Jquery-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-form/dist/jquery.form.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/localization/messages_zh.js"></script>

    <script src="~/js/jquery.validation.rule.js"></script>
    <script src="~/js/jqueryExt.js"></script>
    <!--Bootstrap-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!--Datatables-->
    <script src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>
    <link href="~/lib/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" />

    <!--Layer-->
    <script src="~/lib/layer/src/layer.js"></script>
    <link href="~/lib/layer/src/theme/default/layer.css" rel="stylesheet" />

    <!--Ztree-->
    <link href="~/lib/zTree/css/metroStyle/metroStyle.css" rel="stylesheet" />
    <script src="~/lib/zTree/js/jquery.ztree.core.js"></script>
    <script src="~/lib/zTree/js/jquery.ztree.excheck.js"></script>

    <!--Select2-->
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <script src="~/lib/select2/js/select2.min.js"></script>
    <!--DatetimePicker-->
    <script src="~/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>
    <!--Viewer-->
    <script src="~/lib/viewer/viewer.min.js"></script>
    <link href="~/lib/viewer/viewer.min.css" rel="stylesheet" />
    <!--ueditor-->
    <script src="~/lib/ueditor/ueditor.config.js"></script>
    <script src="~/lib/ueditor/ueditor.all.js"></script>
    <script src="~/lib/ueditor/lang/zh-cn/zh-cn.js"></script>

    <script src="~/js/util.js"></script>

    <script src="~/js/lkWeb.js" asp-append-version="true"></script>
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <script>
        $(function () {
            $('.select').select2({
                placeholder: '请选择',
                allowClear: true,
                dropdownParent: $("body")
            }
            );

            $(".checkAll").click(function () {
                var check = $(this).prop("checked");
                $(".checkChild").prop("checked", check);
            });
        })
    </script>

</head>
<body>
    <div class="ibox">
        <div class="ibox-title">
            <h5>@ViewBag.Title</h5>
        </div>
        <div class="ibox-content">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>
