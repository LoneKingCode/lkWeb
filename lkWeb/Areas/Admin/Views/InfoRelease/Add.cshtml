@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "发布信息";
}
@section Scripts{



    <script type="text/javascript">
        var ue = UE.getEditor('InfoContent');

        $(function () {
            lkWeb.FormValidation($("#lkForm"), function () {
                lkWeb.RefreshAndClose()
            }, "操作成功")
        })
    </script>
}
<form class="form-horizontal" action="@Url.Action("Add", new { id = 0 })" method="post" id="lkForm">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-3 control-label">类型</label>
        <div class="col-md-7">
            @Html.DropDownList("TypeId", (SelectList)ViewBag.types, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">标题</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="Title"
                   data-val="true" data-val-maxlength="标题长度不能超过50个字符" data-val-maxlength-max="50"
                   data-val-minlength="标题长度不能少于2个字符" data-val-minlength-min="2" data-val-required="标题不能为空" />
            <span class="field-validation-valid" data-valmsg-for="Title" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">内容</label>
        <div class="col-md-7">
            <script id="InfoContent" name="InfoContent" type="text/plain" style="height:400px;"></script>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="submit" class="btn btn-success">确定</button>
            <button type="button" class="btn btn-default" onclick="lkWeb.Close()">返回</button>
        </div>
    </div>
</form>