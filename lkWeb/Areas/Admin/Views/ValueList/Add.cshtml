@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "添加值列表";
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            var rules = {
                Name: {
                    required: true,
                },
                Value: {
                    required: true,
                },
                ListOrder: {
                    number: true,
                },
            }
            lkWeb.FormValidation("#lkForm", rules, {}, function () {
                lkWeb.RefreshAndClose()
            }, "操作成功")
        })

    </script>
}
<form class="form-horizontal" action="@Url.Action("Add", new { id = 0 })" method="post" id="lkForm">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-3 control-label">上级</label>
        <div class="col-md-7">
            @Html.DropDownList("ParentId", (SelectList)ViewBag.parents, new { @class = "form-control select" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">名称</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="Name"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">代码</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="Code" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">值</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="Value" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">描述</label>
        <div class="col-md-7">
            <textarea type="text" class="form-control" name="Description" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">排序</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="ListOrder" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="submit" class="btn btn-success">确定</button>
            <button type="button" class="btn btn-default" onclick="lkWeb.Close()">返回</button>
        </div>
    </div>
</form>