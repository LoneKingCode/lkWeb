@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "添加值列表";
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            lkWeb.FormValidation("#lkForm", function () {
                lkWeb.Reload()
            }, "操作成功")
        })

    </script>
}
    <form class="form-horizontal" action="@Url.Action("Add", new { id = 0 })" method="post" id="lkForm">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="col-md-3 control-label">名称</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="Name"
                       data-val="true" data-val-maxlength="名称长度不能超过12个字符" data-val-maxlength-max="12"
                      data-val-required="名称不能为空" />
                <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">代码</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="Code"
                       data-val="true" data-val-maxlength="代码长度不能超过12个字符" data-val-maxlength-max="12"
                        data-val-required="代码不能为空" />
                <span class="field-validation-valid" data-valmsg-for="Code" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">值</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="Value"
                       data-val="true" data-val-required="值不能为空" />
                <span class="field-validation-valid" data-valmsg-for="Value" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">描述</label>
            <div class="col-md-7">
                <textarea type="text" class="form-control" name="Description"
                         data-val-maxlength="描述长度不能超过100个字符" data-val-maxlength-max="100"
                           rows="3"></textarea>
                <span class="field-validation-valid" data-valmsg-for="Description" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">排序</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="ListOrder"
                       data-val-number="排序必须是一个数字。" data-val-required="排序不能为空" data-val="true" />
                <span class="field-validation-valid" data-valmsg-for="ListOrder" data-valmsg-replace="true"></span>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3 col-md-offset-3">
                <button type="submit" class="btn btn-success">确定</button>
                <button type="button" class="btn btn-default" onclick="lkWeb.Close()">返回</button>
            </div>
        </div>
    </form>