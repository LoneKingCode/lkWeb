<div class="div service">
    <h4 class="service-h4">服务中心</h4>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist" id="sub_sys_type">
        <li role="presentation" class="active"><a href="#all" aria-controls="all" role="tab" data-toggle="tab">全部</a></li>
        @foreach (var item in Model.subSystemType)
        {
            <li role="presentation" class=""><a href="#sub_@item.Id" role="tab" data-toggle="tab">@item.Name</a></li>
        }
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="all">
            <ul class="serviceUl">
                @foreach (var type in Model.subSystem.Keys)
                {
                    @foreach (var subSys in Model.subSystem[type])
                    {
                        <li onclick="entrySubSystem(@subSys.Id)">
                            <img style="width:70px;height:70px" src="@subSys.Icon" />
                            <p>@subSys.Name</p>
                        </li>
                    }
                }
            </ul>
        </div>
        @foreach (var type in Model.subSystem.Keys)
        {
            <div role="tabpanel" class="tab-pane" id="sub_@type">
                <ul class="serviceUl">
                    @foreach (var subSys in Model.subSystem[type])
                    {
                        <li onclick="entrySubSystem(@subSys.Id)">
                            <img style="width:70px;height:70px" src="@subSys.Icon" />
                            <p>@subSys.Name</p>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>

    <div class="link">
        <div class="div">
            <h4 class="link-h4">友情链接</h4>
            <ul class="link-ul">
                <li><a href="#" target="_blank">lkWeb</a></li>
            </ul>
            <ul class="link-ul ">
                <li><a href="#" target="_blank">lkWeb</a></li>
            </ul>
            <ul class="link-ul">
