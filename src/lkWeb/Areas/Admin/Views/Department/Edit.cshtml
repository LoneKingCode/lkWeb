@using lkWeb.Service.Dto
@model DepartmentDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Body.cshtml";
}
@section Scripts{
    <script type="text/javascript">
        function Save() {
            var option = {
                datatype: "json",
                success: function (data) {
                    if (data.flag == true) {
                        parent.layer.alert("操作成功");
                        lkWeb.GoAction("department", "index", 0);
                    }
                    else {
                        alert(data.msg);
                    }
                },
                error: function (error) {
                    parent.layer.alert('提交请求失败');
                    console.log(error);
                }
            };
            $("#form-department").ajaxSubmit(option);
        }
    </script>
}
    <form class="form-horizontal" action="@Url.Action("Edit", "Department");" method="post" id="form-department">
        @Html.HiddenFor(item => item.Id, new { @class = "form-control" })
        <div class="form-group">
            <input type="hidden" asp-for="ParentID"/>
            <label class="col-md-3 control-label">上级部门</label>
            <div class="col-md-3">
                <input type="text" class="form-control" name="ParentName" value="@ViewBag.ParentName"  readonly="readonly"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">部门名称</label>
            <div class="col-md-3">
                <input type="text" class="form-control" name="Name" asp-for="Name" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">部门说明</label>
            <div class="col-md-3">
                <input type="text" class="form-control" name="Description" asp-for="Description" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3 col-md-offset-3">
                <button type="button" class="btn btn-success" onclick="Save();">确定编辑</button>
            </div>
        </div>
    </form>