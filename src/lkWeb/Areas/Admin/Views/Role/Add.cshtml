@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Body.cshtml";
}
@section Scripts{
    <script src="~/js/role.js"></script>
}
<form class="form-horizontal" action="@Url.Action("Add", "Role")" method="post" id="form-addRole">
    <div class="form-group">
        <label class="col-md-3 control-label">角色名称</label>
        <div class="col-md-3">
            <input type="text" class="form-control" id="txtLoginName" name="Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">角色说明</label>
        <div class="col-md-3">
            <input type="text" class="form-control" id="txtRealName" name="Description" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="button" class="btn btn-success" onclick="AddRole();">确定增加</button>
        </div>
    </div>
</form>