@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "添加角色";
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            lkWeb.FormValidation($("#lkForm"), function () {
                lkWeb.GoAction("admin","role", "index")
            }, "操作成功")
        })

    </script>
}
<form class="form-horizontal" action="@Url.Action("Add", new { id = 0 })" method="post" id="lkForm">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-3 control-label">角色名称</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="Name"
                   data-val="true" data-val-maxlength="角色名称长度不能超过12个字符" data-val-maxlength-max="12"
                   data-val-minlength="角色名称长度不能少于2个字符" data-val-minlength-min="2" data-val-required="角色名称不能为空" />
            <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">角色描述</label>
        <div class="col-md-7">
            <textarea type="text" class="form-control" name="Description"
                      data-val="true" data-val-maxlength="角色描述长度不能超过100个字符" data-val-maxlength-max="100"
                      data-val-required="角色描述不能为空" rows="3"></textarea>
            <span class="field-validation-valid" data-valmsg-for="Description" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="submit" class="btn btn-success">确定</button>
            <button type="button" class="btn btn-default" onclick="history.go(-1)">返回</button>
        </div>
    </div>
</form>