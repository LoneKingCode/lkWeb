@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Body.cshtml";
}
@section Scripts{
    <script type="text/javascript">
        function Submit() {
            var option = {
                datatype: "json",
                success: function (data) {
                    if (data.flag == true) {
                        alert("增加成功");
                        lkWeb.GoAction("role", "index", 0);
                    }
                    else {
                        alert(data.msg);
                    }
                },
                error: function (error) {
                    alert('提交请求失败');
                    console.log(error);
                }
            };
            $("#form-addRole").ajaxSubmit(option);
        }
    </script>
}
<form class="form-horizontal" action="@Url.Action("Add", "Role")" method="post" id="form-addRole">
    <div class="form-group">
        <label class="col-md-3 control-label">角色名称</label>
        <div class="col-md-3">
            <input type="text" class="form-control" name="Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">角色说明</label>
        <div class="col-md-3">
            <input type="text" class="form-control"   name="Description" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="button" class="btn btn-success" onclick="Submit();">确定增加</button>
        </div>
    </div>
</form>