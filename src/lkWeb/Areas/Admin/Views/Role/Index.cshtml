@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Body.cshtml";
}
@section Scripts{
<script src="~/js/role.js"></script>
}
<div class="data-content" style="padding:15px 0 0 15px;">
    <h2>角色管理</h2>
    <hr />
    <div>
        <label>添加数据：</label>
        <label>角色名称:</label>
        <input type="text" id="txtRoleName" />
        <label>角色描述</label>
        <input type="text" id="txtRoleDesc" />
        <a href="#" class="btn btn-success" onclick="AddRole();">增加</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>ItemID</td>
                <td>角色名称</td>
                <td>角色描述</td>
                <td>创建日期</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>管理员</td>
                <td>最高权限者</td>
                <td>2017年4月30日 11:55</td>
                <td>
                    <a href="#modify" class="btn btn-primary" data-toggle="modal" data-keyboard="true" data-backdrop="true">编辑</a>
                    <a href="#" class="btn btn-danger" onclick="DeleteRole('id')">删除</a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="modal modal-wrapper fade" id="modify" style="display:none;">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>修改</h3>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label class="control-label">角色名称</label>
                <input type="text" value="" class="form-control" name="txtNewRoleName" />
            </div>
            <div class="form-group">
                <label class="control-label">角色描述</label>
                <input type="text" value="" class="form-control" name="txtNewRoleDesc" />
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-danger" data-dismiss="modal">关闭</a>
            <button type="button" class="btn btn-primary" id="btnSaveRole">保存</button>
        </div>
    </div>
</div>