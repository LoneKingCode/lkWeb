<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lkWeb</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("styles", required: false)
</head>
<body>

    <div class="row">
        <div class="col-md-2">
            <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
                <div class="navbar-header profile">
                    <h2 class="title"><a href="#">lkImage</a></h2>
                    <img src="~/upload/131328142728914736.png" alt="..." class="img-circle profile_img">
                    <br />
                    <label id="lblUserName" class="glyphicon glyphicon-user">管理员</label>
                </div>
                <div class="clearfix"></div>
                <ul class="nav sidebar-nav" id="lkMenu">
                    <li>
                        <a data-url="@Url.Action("Index", "Control")"><i class="glyphicon glyphicon-home"></i> 首页</a>
                    </li>
                    <li>
                        <a data-url="@Url.Action("Index", "Role")"><i class="glyphicon glyphicon-cloud-upload"></i>角色管理</a>
                    </li>
                    <li>
                        <a data-url="@Url.Action("UserRole", "Role")"><i class="glyphicon glyphicon-cog"></i> 角色用户管理</a>
                    </li>
                    <li>
                        <a data-url="@Url.Action("Index", "User")"><i class="glyphicon glyphicon-trash"></i> 用户管理</a>
                    </li>
                    <li>
                        <a data-url="@Url.Action("Index", "Menu")"><i class="glyphicon glyphicon-trash"></i> 菜单管理</a>
                    </li>
                    <li>
                        <a data-url="@Url.Action("RoleMenu", "Menu")"><i class="glyphicon glyphicon-trash"></i> 角色菜单管理</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-url="#">
                            <i class="glyphicon glyphicon-user"></i> 用户设置 <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a data-url="@Url.Action("Edit", "User")">修改信息</a></li>
                            <li><a data-url="@Url.Action("History", "User")">登录历史</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" data-url="#"><i class="glyphicon glyphicon-arrow-right"></i> 退出登录</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-md-10">
            @RenderBody()
            <iframe id="frmBody" style="width:calc(100%); height: calc(100%); border: 0; margin: 0; padding: 0; min-height: 400px;overflow-y:scroll" src="@Url.Action("Welcome","Control")"></iframe>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/layer/build/layer.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        //显示loading提示
        var firstLoading = layer.load(2);
        window.onload = function () {
            setInterval(function () { layer.close(firstLoading); }, 1000);
        }
        $(function () {
            $(".panel-heading").click(function (e) {
                /*切换折叠指示图标*/
                $(this).find("span").toggleClass("glyphicon-chevron-down");
                $(this).find("span").toggleClass("glyphicon-chevron-up");
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
