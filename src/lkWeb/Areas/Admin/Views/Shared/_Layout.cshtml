<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lkWeb</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/lkWeb.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="wrapper">
        <!-- 左侧导航栏开始-->
        <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
            <div class="navbar-header profile">
                <h2 class="title"><a href="#">lkWeb </a></h2>
                <img src="~/images/head.jpg" alt="..." class="img-circle profile_img">
                <br />
                <label id="lblUserName" class="glyphicon glyphicon-user">管理员</label>
            </div>
            <div class="clearfix"></div>
            <ul class="nav sidebar-nav" id="lkMenu">
                <li>
                    <a data-url="@Url.Action("Index", "Role")" class="J_menuItem" data-index="1"><i class="glyphicon glyphicon-cloud-upload"></i>角色管理</a>
                </li>
                <li>
                    <a data-url="@Url.Action("Authen", "Role")" class="J_menuItem" data-index="2"><i class="glyphicon glyphicon-cog"></i> 角色授权</a>
                </li>
                <li>
                    <a data-url="@Url.Action("Index", "User")" class="J_menuItem" data-index="3"><i class="glyphicon glyphicon-trash"></i> 用户管理</a>
                </li>
                <li>
                    <a data-url="@Url.Action("Index", "Menu")" class="J_menuItem" data-index="4"><i class="glyphicon glyphicon-trash"></i> 菜单管理</a>
                </li>
                <li>
                    <a data-url="@Url.Action("Edit", "User",new { id=1 })" class="J_menuItem" data-index="4"><i class="glyphicon glyphicon-trash"></i>修改信息</a>
                </li>
                <li>
                    <a data-url="@Url.Action("LoginLog", "Log")" class="J_menuItem" data-index="4"><i class="glyphicon glyphicon-trash"></i> 登录日志</a>
                </li>
                <li>
                    <a data-url="@Url.Action("OperationLog", "Log")" class="J_menuItem" data-index="4"><i class="glyphicon glyphicon-trash"></i> 操作日志</a>
                </li>
            </ul>
        </nav>
        <!-- 左侧导航栏结束 -->
        <!-- 右侧部分开始 -->
        <div id="page-wrapper">
            <!--右侧顶部开始-->
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <ul class="nav navbar-top-links navbar-right">
                        <li class="hidden-xs">
                            admin
                        </li>
                        <li class="hidden-xs">
                            <a href="/Home/Logout"><i class="fa fa fa-sign-out"></i> 退出</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <!--右侧顶部结束-->
            <!--右侧选项卡开始-->
            <div class="row content-tabs">
                <button class="roll-nav roll-left J_tabLeft">
                    <i class="glyphicon glyphicon-backward"></i>
                </button>
                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content" style="margin-left: 0px;">
                        <a href="javascript:;" class="active J_menuTab" data-id="@Url.Action("Welcome","Control")">首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right J_tabRight">
                    <i class="glyphicon glyphicon-forward"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown J_tabClose" data-toggle="dropdown" aria-expanded="true">
                        关闭操作<span class="caret"></span>

                    </button>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        <li class="J_tabShowActive">
                            <a>定位当前选项卡</a>
                        </li>
                        <li class="divider"></li>
                        <li class="J_tabCloseAll">
                            <a>关闭全部选项卡</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>关闭其他选项卡</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!--右侧选项卡结束-->
            <!--右侧框架内容开始-->
            <div class="row J_mainContent" id="content-main">
                @RenderBody()
                <iframe id="frmBody" name="iframe0" class="J_iframe" data-id="@Url.Action("Welcome","Control")" style="width:calc(100%); height: calc(100%); border: 0; margin: 0; padding: 0; min-height: 400px;overflow-y:scroll" src="@Url.Action("Welcome","Control")"></iframe>

            </div>
            <!--右侧框架内容结束-->
            <!--右侧底部开始-->
            <div class="footer navbar-fixed-bottom">
                <div class="pull-right">
                    © 2017 - 2017 <a href="http://loneking.net" target="_blank">©lkWeb</a>
                </div>
            </div>
            <!-- 右侧底部结束-->

        </div>
        <!-- 右边部分结束 -->
    </div>

    <script src="~/lib/layer/build/layer.js"></script>
    <link href="~/lib/layer/build/skin/default/layer.css" rel="stylesheet" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/contabs.js"></script>
    <script>
        //显示loading提示
        var firstLoading = layer.load(2);
        window.onload = function () {
            setInterval(function () { layer.close(firstLoading); }, 1000);
        }
        $(function () {
            //$(".panel-heading").click(function (e) {
            //    /*切换折叠指示图标*/
            //    $(this).find("span").toggleClass("glyphicon-chevron-down");
            //    $(this).find("span").toggleClass("glyphicon-chevron-up");
            //});
        });
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>
