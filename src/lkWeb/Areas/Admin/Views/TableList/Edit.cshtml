@using lkWeb.Service.Dto
@model TableListDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "编辑表";
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            lkWeb.FormValidation($("#lkForm"), function () {
                lkWeb.GoAction("tablelist", "index")
            }, "操作成功")
        })

    </script>
}
<form class="form-horizontal" action="@Url.Action("Edit");" method="post" id="lkForm">
    @Html.HiddenFor(item => item.Id, new { @class = "form-control" })
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-2 control-label">表名</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Name"
                   data-val="true" data-val-maxlength="表名长度不能超过50个字符" data-val-maxlength-max="50"
                   data-val-minlength="表名长度不能少于2个字符" data-val-minlength-min="2" data-val-required="表名不能为空" />
            <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
        </div>
        <label class="col-md-2 control-label">表说明</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Description"
                   data-val="true" data-val-maxlength="表说明长度不能超过50个字符" data-val-maxlength-max="50"
                   data-val-minlength="表说明长度不能少于2个字符" data-val-minlength-min="2" data-val-required="表说明不能为空" />
            <span class="field-validation-valid" data-valmsg-for="Description" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">删除表名</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="DeleteTableName" />
        </div>
        <label class="col-md-2 control-label">查看|编辑|删除 可见</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ViewEditDeleteSet" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">导入类型</label>
        <div class="col-md-4">
            @Html.DropDownListFor(x => x.ImportType, (SelectList)ViewBag.ImportTypeList, new { @class = "form-control" })
        </div>
        <label class="col-md-2 control-label">是否视图</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="IsView" data-val-maxlength="是否视图长度不能超过2个字符" data-val-maxlength-max="2"
                   data-val="true" data-val-required="是否视图不能为空" />
            <span class="field-validation-valid" data-valmsg-for="IsView" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">默认排序条件</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="DefaultSort" />
        </div>
        <label class="col-md-2 control-label">禁止删除条件</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ForbiddenDeleteFilter" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">禁止更新条件</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ForbiddenUpdateFilter" />
        </div>
        <label class="col-md-2 control-label">禁止添加条件</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="ForbiddenAddFilter" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">默认过滤条件</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="DefaultFilter" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">扩展方法</label>
        <div class="col-md-7">
            <textarea class="form-control" asp-for="ExtendFunction" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-3">
            <button type="submit" class="btn btn-success">确定</button>
            <button type="button" class="btn btn-default" onclick="history.go(-1)">返回</button>
        </div>
    </div>
</form>