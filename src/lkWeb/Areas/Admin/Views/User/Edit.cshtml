@using lkWeb.Service.Dto
@model UserDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Content.cshtml";
    ViewBag.Title = "编辑用户";

}
@section Scripts
    {
    <script type="text/javascript">
        function Save() {
            if ($("#txtNewPwdAgain").val() != $("#txtNewPwd").val()) {
                parent.layer.alert("两次输入的密码不相同");
                return;
            }
            var option = {
                datatype: "json",
                success: function (data) {
                    if (data.flag == true) {
                        parent.layer.alert("操作成功");
                        lkWeb.GoAction("user", "index", 0);
                    }
                    else {
                        parent.layer.alert(data.msg);
                    }
                },
                error: function (error) {
                    parent.layer.alert('提交请求失败');
                    console.log(error);
                }
            };
            $("#form-editUser").ajaxSubmit(option);
        }

    </script>
}
    <form class="form-horizontal" action="@Url.Action("Edit");" method="post" id="form-editUser">
        @Html.HiddenFor(item => item.Id, new { @class = "form-control" })
        @Html.HiddenFor(item => item.ConcurrencyStamp, new { @class = "form-control" })
        @Html.HiddenFor(item => item.SecurityStamp, new { @class = "form-control" })

        <div class="form-group">
            <label class="col-md-3 control-label">用户名</label>
            <div class="col-md-7">
                <input type="text" class="form-control" id="txtUserName" name="UserName" asp-for="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">姓名</label>
            <div class="col-md-7">
                <input type="text" class="form-control" id="txtRealName" name="RealName" asp-for="RealName" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">邮箱</label>
            <div class="col-md-7">
                <input type="email" class="form-control" id="txtEmail" name="Email" asp-for="Email" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">新密码</label>
            <div class="col-md-7">
                <input type="password" class="form-control" id="txtNewPwd" name="PassWord" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">再次输入</label>
            <div class="col-md-7">
                <input type="password" class="form-control" id="txtNewPwdAgain" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">状态</label>
            <div class="col-md-7">
                @Html.DropDownListFor(x => x.Status, (SelectList)ViewBag.StatusList, "请选择", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 col-md-offset-3">
                <button type="button" class="btn btn-success" onclick="Save();">保存</button>
                <button type="button" class="btn btn-default" onclick="history.go(-1)">返回</button>
            </div>
        </div>
    </form>