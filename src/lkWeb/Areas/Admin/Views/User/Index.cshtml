@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Body.cshtml";
}
@section Scripts{
    <script>
        var url = '@Url.Action("GetList")';
        $(function () {
            var cols = [
                { data: "id", orderable: false },
                { data: "loginName", name: "loginName", orderable: true },
                { data: "realName", name: "realName", orderable: true },
                { data: "email", name: "email", orderable: true },
                { data: function (e) { return e.StatusName; }, name: "status", orderable: true },
                {
                    data: function (e) {
                        return e.CreateDateTime.toString().getDate();
                    }, name: "createDateTime",
                    orderable: true
                }
            ];

            var config = {
                "processing": true,
                "bInfo": true, //是否显示是否启用底边信息栏
                "sAjaxSource":url,
                'autoWidth': true,
                "sPaginationType": "full_numbers",
                "oLanguage": {
                    "sProcessing": "请求数据中......",
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sZeroRecords": "抱歉， 没有找到",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "没有数据",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "sSearch":"搜索",
                    "oPaginate": {
                        "sFirst": "<button type=\"button\" class=\"btn btn-primar\" >首页</button>",
                        "sPrevious": "<button type=\"button\" class=\"btn btn-primar\" >上一页</button>",
                        "sNext": "<button type=\"button\" class=\"btn btn-primar\" >后一页</button>",
                        "sLast": "<button type=\"button\" class=\"btn btn-primar\" >尾页</button>"
                    }
                },
                "sZeroRecords": "没有检索到数据",
                "retrieve": true,
                "paging": true,
                "ordering": true,
                "info": true,
                "aoColumns": [
                    { "mData": "id" },
                    { "mData": "loginName" },
                    { "mData": "realName" },
                    { "mData": "email" },
                    { "mData": "statusName" },
                    { "mData": "createDateTime" },
                    { "mData": "edit" },
                    { "mData": "delete" }
                  ]
            };
           $.fn.dataTableExt.sErrMode = 'throw';
           $("#table_user").dataTable(config);

            $(".box-refresh").click(function () {
                grid.reload();
            });
            });
    </script>
}
<div class="data-content" style="padding:15px 0 0 15px;">
    <h2>用户管理</h2>
    <hr />
    <div>
        <label>新增用户</label>
        <label>用户名:</label>
        <input type="text" id="txtUserName" />
        <label>密码</label>
        <input type="text" id="txtPwd" />
        <label>电子邮箱</label>
        <input type="text" id="txtEmail" />
        <a href="#" class="btn btn-success">增加</a>
    </div>
    <table class="table table-striped table-hover" id="table_user">
        <thead>
            <tr>
                <td>Id</td>
                <td>用户名</td>
                <td>姓名</td>
                <td>电子邮箱</td>
                <td>状态</td>
                @*<td>最后登陆时间</td>*@
                <td>创建日期</td>
                <td>编辑</td>
                <td>删除</td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
